<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="@dimen/big_size">

    <ImageView
        android:id="@+id/image"
        android:layout_width="@dimen/source_icon_size"
        android:layout_height="@dimen/source_icon_size"
        android:contentDescription="@string/source_image_cd"
        android:scaleType="centerCrop"/>

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/mid_size"
        android:layout_marginStart="@dimen/mid_size"
        android:textStyle="bold"
        tools:text="TechCrunch"/>

</LinearLayout>